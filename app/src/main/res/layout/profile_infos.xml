<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:theme="@style/Theme.AttestationsGenerator.ProfileLayout"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:layout_gravity="fill_vertical"
    >


    <TextView
        android:id="@+id/profile_infos_name"

        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:text="firstname lastname"
        android:textStyle="bold"

        android:paddingRight="@dimen/fragment_text_right_margin"
        android:theme="@style/Theme.AttestationsGenerator.CommonText"
    android:layout_marginBottom="1dp"
         />

    <RelativeLayout
        android:id="@+id/profile_infos_birth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_infos_name"
        android:orientation="horizontal"
        android:paddingRight="@dimen/fragment_text_right_margin"

        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_cake_22"
            android:id="@+id/profile_infos_icon_birth"
            android:layout_centerInParent="true"
            android:layout_alignParentStart="true"/>

        <TextView


            android:id="@+id/profile_infos_birth_text"
            android:layout_toEndOf="@id/profile_infos_icon_birth"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01/01/1970 Ã  Caen"
            android:theme="@style/Theme.AttestationsGenerator.CommonText"
            />

        </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_infos_birth"
        android:orientation="horizontal"
        android:paddingRight="@dimen/fragment_text_right_margin"

        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_house_22"
            android:id="@+id/profile_infos_icon_address"
            android:layout_centerInParent="true"
            android:layout_alignParentStart="true"/>

        <TextView


            android:id="@+id/profile_infos_address_text"
            android:layout_toEndOf="@id/profile_infos_icon_address"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:theme="@style/Theme.AttestationsGenerator.CommonText"
            />

    </RelativeLayout>

    <ImageButton
        android:id="@+id/profile_infos_delete_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"

        android:layout_centerVertical="true"
        android:background="@drawable/ic_baseline_delete_36"
        android:text="@string/fragment_attestation_delete_alt" />
</RelativeLayout>